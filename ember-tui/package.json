{
  "name": "ember-tui",
  "version": "0.1.0",
  "description": "Terminal UI library for Ember.js",
  "type": "module",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "production": {
        "require": "./dist/index.cjs.js",
        "import": "./dist/index.esm.js"
      },
      "default": "./src/index.ts"
    },
    "./*": {
      "default": "./src/*.ts"
    }
  },
  "scripts": {
    "build": "rollup --config",
    "dev": "rollup --config --watch",
    "clean": "rm -rf dist",
    "test": "vitest --run",
    "test:update": "vitest --run --update"
  },
  "keywords": [
    "ember-addon"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@alcalzone/ansi-tokenize": "^0.2.2",
    "@glimmer/component": "^2.0.0",
    "ansi-styles": "^6.2.3",
    "chalk": "^5.6.2",
    "cli-boxes": "^4.0.1",
    "slice-ansi": "^7.1.2",
    "string-width": "^8.1.0",
    "type-fest": "^5.2.0",
    "widest-line": "^5.0.0",
    "yoga-layout": "~3.2.1",
    "indent-string": "^5.0.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.28.0",
    "@babel/plugin-transform-class-static-block": "^7.28.3",
    "@babel/plugin-transform-typescript": "^7.28.5",
    "@embroider/addon-dev": "^8.1.0",
    "@glint/ember-tsc": "^1.0.8",
    "@rollup/plugin-babel": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/node": "^20.10.0",
    "babel-plugin-ember-template-compilation": "^3.0.1",
    "concurrently": "^8.2.2",
    "content-tag": "^4.0.0",
    "ember-concurrency": "^5.1.0",
    "rollup": "^4.9.0",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@glimmer/component": "^2.0.0",
    "@glimmer/tracking": "^1.1.2"
  },
  "ember-addon": {
    "version": 2,
    "type": "addon"
  }
}
